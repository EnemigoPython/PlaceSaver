{
    "name": "Place Saver",
    "description": "Save a place on a web page",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
      "tabs",
      "storage"
    ],
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
          ],
        "js": ["/src/content.js"]
    }],
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "/src/options.html",
    "action": {
      "default_popup": "/src/popup.html",
      "default_icon": {
        "16": "/icons/book16.png",
        "32": "/icons/book32.png",
        "48": "/icons/book64.png",
        "128": "/icons/book128.png"
      },
      "icons": {
        "16": "/icons/book16.png",
        "32": "/icons/book32.png",
        "48": "/icons/book64.png",
        "128": "/icons/book128.png"
      }
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+H",
          "mac": "MacCtrl+Shift+H"
        },
        "description": "Save a place on a web page"
      }
    }
  }